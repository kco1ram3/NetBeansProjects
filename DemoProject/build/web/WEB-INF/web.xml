<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>ขนาดรูปภาพย่อส่วน</description>
        <param-name>resizeScale</param-name>
        <param-value>150</param-value>
    </context-param>
    <servlet>
        <servlet-name>UploadFileServlet</servlet-name>
        <servlet-class>controller.UploadFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberListJDBC</servlet-name>
        <servlet-class>controller.MemberListJDBC</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/MemberServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberUpdateServlet</servlet-name>
        <url-pattern>/MemberUpdateServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadFileServlet</servlet-name>
        <url-pattern>/UploadFile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberListJDBC</servlet-name>
        <url-pattern>/MemberList</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MemberServlet</welcome-file>
    </welcome-file-list>
    <context-param>
        <description>จำนวนข้อมูลต่อหน้า</description>
        <param-name>pageSize</param-name>
        <param-value>10</param-value>
    </context-param>
    <servlet>
        <servlet-name>Coffee</servlet-name>
        <servlet-class>controller.CoffeeSelect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberServlet</servlet-name>
        <servlet-class>controller.MemberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberUpdateServlet</servlet-name>
        <servlet-class>controller.MemberUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Coffee</servlet-name>
        <url-pattern>/CoffeeSelect.do</url-pattern>
    </servlet-mapping>
</web-app>
